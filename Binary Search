#include<stdio.h>
void sorting (int a[], int n){
    int i,j,temp;
    for (i=0;i<n-1;i++){
        for(j=i+1;j<n-1;j++){
            if(a[i]>a[j]){
            temp=a[i];
            a[i]=a[j];
            a[j]=temp;
            }
        }
    }
}
void search(int a[],int n){
    printf("enter the element to search: ");
    int x;
    scanf("%d",&x);
    int low=0,high=n-1,mid=(low+high)/2;
    while(low!=high){
        if(a[mid]==x){
            printf("elemet is found");
            break;
        }
        else if(x>a[mid]){
            low=mid+1;
        }else{
            high=mid-1;
        }
        mid=(low+high)/2;
    }
    if(low==high)
    printf("element is not found\n");
    
}
void main(){
    int n;
    printf("enter no of elements:\n");
    scanf("%d",&n);
    int a[n],b[n];
    printf("enter the elements\n");
    for(int i=0;i<n;i++)
    scanf("%d",&a[i]);
    sorting(a,n);
    search(a,n);
    
}
